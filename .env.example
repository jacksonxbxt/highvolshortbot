# Bybit API credentials (get from https://www.bybit.com/app/user/api-management)
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Mode settings
TESTNET=true          # Use Bybit testnet (true) or mainnet (false)
PAPER_TRADE=true      # Paper trade mode - no real orders (true/false)

# Strategy parameters
CAPITAL=1000          # Capital to deploy in USD
N_SHORTS=20           # Number of alts to short
LOOKBACK=30           # Volatility lookback periods (30 x 4h = 5 days)
LEVERAGE=1            # Leverage per side (1 = no leverage)
